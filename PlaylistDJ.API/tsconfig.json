{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "inlineSourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "exclude": ["node_modules/*"]
}
