{
  "name": "playlist-dj.api",
  "version": "0.0.1",
  "private": true,
  "description": "Backend for the Playlist DJ service",
  "main": "src/app.ts",
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/mikro-orm.config.ts",
      "./dist/mikro-orm.config.js"
    ]
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/bin/www.js",
    "dev": "concurrently \"doas mongod\" \"tsc -w\" \"nodemon dist/bin/www.js\""
  },
  "author": {
    "name": "Filip VojtÄ›ch",
    "email": "filip@aprex.cz"
  },
  "dependencies": {
    "@mikro-orm/core": "^4.5.9",
    "@mikro-orm/mongodb": "^4.5.9",
    "body-parser": "^1.19.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^10.0.0",
    "express": "~4.16.1",
    "express-session": "^1.17.2",
    "got": "^11.8.3",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^4.5.9",
    "@types/cookie-parser": "^1.4.2",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.10.1",
    "concurrently": "^6.3.0",
    "nodemon": "^2.0.13",
    "prettier": "^2.4.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "nodemonConfig": {
    "watch": [
      "dist/"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": false,
    "singleQuote": true,
    "arrowParens": "avoid",
    "printWidth": 120
  }
}
